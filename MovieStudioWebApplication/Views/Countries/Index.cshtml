@model IEnumerable<MovieStudioWebApplication.Models.Country>

@{
    ViewBag.Title = "Страны";
}

<h2>Страны</h2>

<p>
    @Html.ActionLink("Создать новую запись", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.CountryID }) |
            @Html.ActionLink("Подробнее", "Details", new { id=item.CountryID }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.CountryID })
        </td>
    </tr>
}

</table>
